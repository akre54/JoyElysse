/////////////////
// PAGE STYLES //
/////////////////

html, body
  height: 100%
  min-width: 300px
  font-family: 'Raleway', sans-serif
  overflow: hidden
  -webkit-user-select: none

////////////
// HEADER //
////////////

header
  position: fixed
  top: 0
  right: 1em
  display: flex
  flex-direction: row
  justify-content: space-around

  .social__links
    list-style: none
    display: flex

    .fa::before
      font-size: 1.5em

  a, a:visited
    color: rgb(130, 130, 130)
    text-decoration: none
    display: block
    padding: 1em



/////////////
// CONTENT //
/////////////

#pages
  position: absolute
  width: 100%
  height: 100%

.page
  width: 100%
  height: 100%
  position: relative

  background-color: rgb(240, 237, 228)
  background-repeat: no-repeat
  background-position: 0% center

  transition: transform .8s ease-in-out

  -webkit-transform: translate3d(0, 0, 0)
  transform: translate3d(0, 0, 0)
  -webkit-backface-visibility: hidden

for i in 2 3 4
  .page:nth-of-type({i}).active
      transform: translateY((i - 1) * -100%)

.nav-link
  color: #fff
  font-style: italic
  text-decoration: none

.close-btn
  color: rgba(0, 0, 0, .5)

h1
  color: #fff
  font-family: 'Tangerine', cursive
  font-size: 13em
  font-weight: normal
  text-align: center
  margin: 0

nav
  text-align: center
  font-size: 1.5em
  font-weight: bold
  color: #fff

#home-page
  background-image: url('../assets/images/joy-headshot-full.jpg')
  background-size: contain

  .content
    position: static
    padding: 200px 0 200px 75vh
    width: 450px

#shows-page
  background-color: rgb(210, 94, 79)
  background-size: cover
  background-image: url('../assets/images/shows-bg.jpg')

#mailing-list-page
  background-color: rgb(240, 237, 228)
  background-image: url('../assets/images/joy-headshot-full.jpg')

#contact-page
  background-color: rgb(240, 237, 228)
  background-image: url('../assets/images/joy-headshot-full.jpg')


