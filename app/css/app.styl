/////////////////
// PAGE STYLES //
/////////////////

html, body
  height: 100%
  min-width: 300px
  font-family: 'Raleway', sans-serif
  color: #555
  overflow: hidden
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

h1
  color: #fff
  font-family: 'Tangerine', cursive
  font-size: 13em
  font-weight: normal
  text-align: center
  margin: 0

a
  color: #fff
  text-decoration: none

////////////
// HEADER //
////////////

header
  position: fixed
  top: 0
  right: 1em
  margin: 16px
  display: flex
  flex-direction: row
  justify-content: space-around

  .social__links
    display: flex

    .fa::before
      font-size: 1.5em

    a
      padding: 1em
      color: rgb(130, 130, 130)



/////////////
// CONTENT //
/////////////

#pages
  position: absolute
  width: 100%
  height: 100%

.page
  width: 100%
  height: 100%
  position: relative

  background-color: rgb(240, 237, 228)
  background-repeat: no-repeat
  background-position: 0% center

  -webkit-transform: translate3d(0, 0, 0)
  transform: translate3d(0, 0, 0)
  -webkit-backface-visibility: hidden

for i in 2 3 4
  .page:nth-of-type({i}).active
    transform: translateY((i - 1) * -100%)

.content
  padding: 200px 0 200px 75vh
  width: 450px

.close-btn
  color: rgba(0, 0, 0, .5)
  margin: 1em

nav
  text-align: center
  font-size: 1.5em
  font-weight: bold
  color: #fff

  a
    color: #fff
    font-style: italic
    text-decoration: none

#home-page
  background-image: url('../assets/images/joy-headshot-full.jpg')
  background-size: contain

#shows-page
  background-color: rgb(210, 94, 79)
  background-size: cover
  background-image: url('../assets/images/shows-bg.jpg')
  transition: transform .8s ease-in-out

  .content
    color: #ccc
    padding: 0
    width: auto

  .bit-share-links, .bit-share-text
    display: none

  tr:not(.bit-header)
    -webkit-user-select: initial
    user-select: initial

#mailing-list-page
  background-color: rgb(240, 237, 228)
  background-image: url('../assets/images/contact-bg.jpg')
  transition: transform 1.2s ease-in-out

  .content
    padding-left: 10%
    max-width: 350px

#contact-page
  background-color: rgb(240, 237, 228)
  background-image: url('../assets/images/joy-headshot-full.jpg')
  transition: transform 1.2s ease-in-out

  .content
    padding-left: 110vh
    max-width: 350px

  a
    color: #555



///////////////////////
// Mailing list form //
///////////////////////

.input-group
  margin: 1em 0
  position: relative
  display: table

.input-group-addon
  padding: 0 16px
  font-size: 18px
  border-radius: 6px 0 0 6px
  text-align: center
  background-color: #eee
  border: 1px solid #ccc
  white-space: nowrap
  vertical-align: middle
  display: table-cell
  border-right: 0


input[type="email"]
  display: table-cell
  padding: 10px 16px
  font-size: 1.2em
  line-height: 1.33
  border-radius: 0 6px 6px 0
  border: 1px solid #ccc
  transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s

  &:focus
    border-color: #66afe9
    outline: 0
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6)

  &.invalid
    border-color: #a94442
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(169, 68, 66, .6)

input[type="submit"]
  -webkit-appearance: button
  display: inline-block
  margin-bottom: 0
  font-size: 18px
  font-weight: 400
  line-height: 1.33
  text-align: center
  white-space: nowrap
  vertical-align: middle
  cursor: pointer
  border: 1px solid #ccc
  border-radius: 6px
  background-color: #fff
  padding: 10px 16px
  position: relative


