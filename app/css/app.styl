@import "grid.styl"

html, body, #content
  height: 100%


header
  position: fixed
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: center
  width: 100%
  background-color: rgba(39, 36, 34, .9)


#header__title
  background-color: rgb(230, 103, 61)
  float: left
  padding: 10px
  width: 210px

  h1
    color: #fff
    font-family: 'Great Vibes', cursive
    margin: 0
    text-align: center


  h3
    color: #fff
    font-family: 'Bad Script', cursive
    margin: 0
    text-align: center


.navigation
  list-style: none
  display: flex
  justify-content: center

  a, a:visited
    color: rgb(162, 151, 144)
    text-decoration: none
    display: block
    padding: 1em
    font-size: 25px


footer
  position: fixed
  bottom: 0
  display: flex
  justify-content: center
