@import "grid.styl"

/////////////////
// PAGE STYLES //
/////////////////

html, body
  height: 100%

body
  background-image: url('../assets/images/joy-headshot-full.jpg')
  background-size: cover
  -webkit-user-select: none;
  font-family: 'Raleway', sans-serif

/////////////
// CONTENT //
/////////////

#content-container
  position: static
  padding: 150px 200px

h1
  color: #fff
  font-family: 'Bad Script', cursive
  font-size: 72px
  margin-left: 200px
  text-align: center

////////////
// FOOTER //
////////////

footer
  position: fixed
  bottom: 0
  display: flex
  flex-direction: row
  justify-content: space-around
  width: 100%

  .social__links
    list-style: none
    display: flex

  a, a:visited
    color: rgb(130, 130, 130)
    text-decoration: none
    display: block
    padding: 1em


////////////////////
// RESPONSIVENESS //
////////////////////

@media screen and (max-width: 670px)
  body
    background-image: none
    background-color: #f1eee7

  footer
    position: static

  #content-container
    padding: 50px
