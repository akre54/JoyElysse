/////////////////
// PAGE STYLES //
/////////////////

html, body
  height: 100%
  min-width: 300px
  font-family: 'Pontano Sans', sans-serif
  font-size: 100%
  color: #555
  overflow: hidden
  user-select: none

h1
  color: rgb(255, 255, 255)
  font-family: 'Tangerine', cursive
  font-size: 13em
  font-weight: normal
  text-align: center
  margin: 0

a, .pipe
  color: rgb(255, 255, 255)
  text-decoration: none

////////////
// HEADER //
////////////

header
  position: fixed
  top: 0
  right: 1rem
  margin: 1rem
  display: flex
  flex-direction: row
  justify-content: space-around

  .social__links
    display: flex

    .fa::before
      font-size: 1.5rem

    a
      padding: 1rem
      color: rgb(130, 130, 130)



/////////////
// CONTENT //
/////////////

.page
  size 100% 100%

  background-color: rgb(240, 237, 228)
  background-repeat: no-repeat
  background-position: 0% center
  background-size: cover

  transition: transform .6s ease-in-out

for i in 2 3 4
  .page:nth-of-type({i})
    transform: translateY(i * -100%)
    &.active
      transform: translateY((i - 1) * -100%)

.content
  padding: 15% 0 15% 75vh

.close-btn
  color: rgba(0, 0, 0, .5)
  margin: 1rem

nav
  text-align: center
  font-size: 1.5rem
  font-weight: bold

  a
    font-style: italic

#home-page
  background-image: url('../assets/images/joy-headshot-full.jpg')
  background-size: contain

#shows-page
  background-color: rgb(210, 94, 79)
  background-image: url('../assets/images/shows-bg.jpg')
  color: #ccc

  .content
    padding: 0

  .bit-share-links, .bit-share-text
    display: none

#mailing-list-page
  background-color: rgb(240, 237, 228)
  background-image: url('../assets/images/contact-bg.jpg')

  .content
    padding-left: 10%

#contact-page
  background-color: rgb(240, 237, 228)
  background-image: url('../assets/images/joy-headshot-full.jpg')
  background-size: initial

  .content
    padding-left: 110vh
    max-width: 22rem

  a
    color: #555


#contact__email, #shows-page tr:not(.bit-header)
  user-select: initial

///////////////////////
// Mailing list form //
///////////////////////

.input-group
  margin: 1rem 0
  display: inline-table
  font-size: 1.2em

.input-group-addon
  padding: 0 .5em
  border-radius: 2px 0 0 2px
  background-color: rgba(238, 238, 238, .8)
  border: 1px solid #ccc
  display: table-cell
  border-right: 0

label
  display: block

input[type="email"]
  display: table-cell
  padding: 7px
  line-height: 1.33
  background-color: rgba(255, 255, 255, .8)
  border-radius: 0 2px 2px 0
  border: 1px solid #bcc3d1
  box-shadow: inset 0 0 1px rgba(128,133,142,0.6)
  transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s

  &:focus
    border-color: #66afe9
    outline: 0
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6)

  &.invalid
    border-color: #a94442
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(169, 68, 66, .6)

input[type="submit"]
  -webkit-appearance: button
  font-weight: 400
  line-height: 1.33
  border: 1px solid #ccc
  border-radius: 2px
  background-color: #fff
  padding: .5rem


////////////////////
// Responsiveness //
////////////////////

@media only screen and (orientation: portrait)
  html, body
    min-width: initial
    overflow: auto

  html
    background-color: #f0ede4
    background-image: url('../assets/images/joy-headshot-full.jpg')
    background-size: cover

  body
    background-color: rgba(255, 255, 255, .7)

  header
    width: 100%
    position: static
    margin: 0

  a, h1, .pipe, .content
    color: #555 !important

  .page
    height: auto
    width: auto
    margin: 2rem 0
    padding: 1rem
    background-image: none !important
    background-color: transparent !important
    transform: none !important
    transition: none !important

  .content
    padding: 0 !important
    max-width: none !important

  .close-btn
    display: none

@media screen and (max-device-width: 480px)
  h1
    font-size: 11em !important

// High-rez unscaled screens (e.g. Kindle Fire HDX)
@media only screen and (min-width: 2550px) and (-webkit-max-device-pixel-ratio: 2)

  html
    font-size: 200% !important
