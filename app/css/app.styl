/////////////////
// PAGE STYLES //
/////////////////

html, body
  height: 100%
  min-width: 300px
  font-family: 'Raleway', sans-serif
  color: #777
  overflow: hidden
  -webkit-user-select: none

////////////
// HEADER //
////////////

header
  position: fixed
  top: 0
  right: 1em
  display: flex
  flex-direction: row
  justify-content: space-around

  .social__links
    list-style: none
    display: flex

    .fa::before
      font-size: 1.5em

  a, a:visited
    color: rgb(130, 130, 130)
    text-decoration: none
    display: block
    padding: 1em



/////////////
// CONTENT //
/////////////

#pages
  position: absolute
  width: 100%
  height: 100%

.page
  width: 100%
  height: 100%
  position: relative

  background-color: rgb(240, 237, 228)
  background-repeat: no-repeat
  background-position: 0% center

  transition: transform .8s ease-in-out

  -webkit-transform: translate3d(0, 0, 0)
  transform: translate3d(0, 0, 0)
  -webkit-backface-visibility: hidden

for i in 2 3 4
  .page:nth-of-type({i}).active
      transition: transform (i * .4s) ease-in-out
      transform: translateY((i - 1) * -100%)

.content
  padding: 200px 0 200px 75vh
  width: 450px

.close-btn
  color: rgba(0, 0, 0, .5)
  margin: 1em

h1
  color: #fff
  font-family: 'Tangerine', cursive
  font-size: 13em
  font-weight: normal
  text-align: center
  margin: 0

nav
  text-align: center
  font-size: 1.5em
  font-weight: bold
  color: #fff

  a
    color: #fff
    font-style: italic
    text-decoration: none

#home-page
  background-image: url('../assets/images/joy-headshot-full.jpg')
  background-size: contain

#shows-page
  background-color: rgb(210, 94, 79)
  background-size: cover
  background-image: url('../assets/images/shows-bg.jpg')

  .content
    padding: 0
    width: auto

#mailing-list-page
  background-color: rgb(240, 237, 228)
  background-image: url('../assets/images/joy-headshot-full.jpg')

  .content
    padding-left: 110vh

#contact-page
  background-color: rgb(240, 237, 228)
  background-image: url('../assets/images/joy-headshot-full.jpg')



///////////////////////
// Mailing list form //
///////////////////////

form

.input-group
  margin: 1em 0
  position: relative
  display: table
  // border-collapse: separate

.input-group-addon
  padding: 0 16px
  font-size: 18px
  border-radius: 6px 0 0 6px
  color: #555
  text-align: center
  background-color: #eee
  border: 1px solid #ccc
  width: 1%
  white-space: nowrap
  vertical-align: middle
  display: table-cell
  border-right: 0


input[type="email"]
  -webkit-appearance: none
  display: table-cell
  padding: 10px 16px
  font-size: 18px
  line-height: 1.33
  border-radius: 0 6px 6px 0
  position: relative
  float: left
  width: 100%
  color: #555
  border: 1px solid #ccc
  transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;

  &:focus
    border-color: #66afe9
    outline: 0
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6);




