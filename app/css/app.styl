//////////
// VARS //
//////////

$root-font-size         = 120%

$main-text-color        = rgb(180, 180, 180)
$link-color             = rgb(255, 255, 255)
$contact-link-color     = rgb(64,  63,  61)
$hero-nav-default-color = rgb(255, 255, 255)

$page-bg-color          = rgb(5,   5,   5)

$mobile-bg-mask         = rgba(255, 255, 255, .7)

$placeholder-color      = rgb(108, 107,  106)

$soundcloud-hover-color = rgb(255, 136, 0)
$fb-hover-color         = rgb(59,  89,  152)
$youtube-hover-color    = rgb(187, 0,   0)
$instagram-hover-color  = rgb(81,  127, 164)

$nav-width = 28rem

@font-face
  font-family: Spire
  src: url('../assets/spireextralightalt.ttf')


/////////////////
// PAGE STYLES //
/////////////////

html, body
  height: 100%
  min-width: 300px
  font-family: 'Open Sans Condensed', sans-serif
  font-size: $root-font-size
  color: $main-text-color
  box-sizing: border-box
  overflow: hidden
  user-select: none

*, *:before, *:after
  box-sizing: inherit
  -webkit-touch-callout: none

a
  color: $link-color
  text-decoration: none

/////////
// nav //
/////////

nav
  text-align: center
  font-size: 1.5rem
  height: 100vh
  display: flex
  position: fixed

.social__links
  display: flex
  justify-content: space-around
  padding: 0 1em

  a
    margin: .5rem
    color: $hero-nav-default-color
    transition: color .5s ease-in-out

  .fa::before
    font-size: 1.5rem

  .fa-soundcloud:hover
    color: $soundcloud-hover-color

  .fa-facebook-square:hover
    color: $fb-hover-color

  .fa-youtube:hover
    color: $youtube-hover-color

  .fa-instagram:hover
    color: $instagram-hover-color

h1
  color: $hero-nav-default-color
  font-family: Spire, sans-serif;
  font-size: 6rem
  font-weight: normal
  text-align: center
  letter-spacing: .58em
  margin: 0
  margin-bottom: .1em
  padding-left: .5em

.page__links
  list-style-type: none
  padding: 0

  a
    color: $hero-nav-default-color
    position: relative
    font-family: 'Source Sans Pro', sans-serif
    font-size: 1.5rem
    transition: color 1s ease 0s, text-decoration 1s ease 0s

    &:before
      content: ""
      position: absolute
      width: 100%
      height: 2px
      bottom: 0
      left: 0
      background-color: $hero-nav-default-color
      visibility: hidden
      transform: scaleX(0)
      transition: all 0.3s ease-in-out 0s

    &:hover:before, &.active:before
      visibility: visible
      transform: scaleX(1)

.nav__wrapper
  margin-top: auto
  margin-bottom: auto


/////////////
// CONTENT //
/////////////

.page
  height: 100%
  width: 100%

  position: fixed
  align-items: center

  opacity: 0
  visibility: hidden

  background-color: $page-bg-color
  background-repeat: no-repeat
  background-position: 0% center
  background-size: cover
  background-attachment: fixed

  transition: visibility 0s linear 1s, opacity 1s ease-in-out

  &.active
    opacity: 1
    visibility: visible

    transition-delay: 0s

.content
  margin-left: $nav-width

#home-page
  background-image: url('../assets/images/Joy87784clean.jpg')

  opacity: 1
  visibility: visible

#about-page
  background-image: url('../assets/images/Joy87858new.jpg')

#shows-page
  background-image: url('../assets/images/Joy87541.jpg')

  .bit-share-links, .bit-share-text
    display: none

#mailing-list-page
  background-image: url('../assets/images/Joy87781.jpg')

  .content
    margin-top: 25%

#contact-page
  background-image: url('../assets/images/Joy87815 1.jpg')

  a
    color: $contact-link-color


#contact__email, #shows-page tr:not(.bit-header)
  user-select: initial

///////////////////////
// Mailing list form //
///////////////////////

form
  margin-left: 16rem

.input-group
  margin: 1em 0
  display: inline-flex
  font-size: 1.2em

label
  display: block

input[type="email"]
  color: $main-text-color
  flex: 1
  padding: 7px
  line-height: 1.33
  background-color: transparent
  border: none
  border-bottom: 1px solid #bcc3d1
  transition: border-color ease-in-out .15s

  &:focus
    border-color: #66afe9
    outline: 0

  &.invalid
    border-color: #a94442

  &::placeholder
    color: $placeholder-color

input[type="submit"]
  font-weight: 400
  line-height: 1.33
  border: 1px solid #ccc
  background-color: transparent
  margin: .25em
  padding: .25em
  padding-bottom: 8px

  &:active, &:focus
    border-bottom: 2px solid green

input:hover
  border-bottom: 2px solid #ccc


////////////////////
// Responsiveness //
////////////////////

@media only screen and (orientation: portrait)
  html, body
    min-width: initial
    overflow: auto

  html
    background-color: #f0ede4
    background-image: url('../assets/images/joy-headshot-full.jpg')
    background-size: cover
    background-position-x: -1 * $nav-width

  body
    display: flex
    flex-direction: column

    background-color: $mobile-bg-mask

  header
    width: 100%
    position: static
    align-items: center
    margin: 0

  a, h1, .content
    color: #555 !important


  nav
    height: auto
    float: none
    flex: 1
    order: -1

    justify-content: center


  .nav__wrapper
    margin-top: 2em
    margin-bottom: 0
    width: 100vw

  .page__links
    display: none

  .pages
    height: 58vh
    margin-top: 42vh
    overflow-y: scroll

  #home-page
    display: none

  #about-page
    margin-top: 0

  .page
    height: auto
    width: 100vw
    flex: 1
    position: static
    margin: 2rem 0
    padding: 1rem
    background-image: none !important
    background-color: transparent !important
    transform: none !important
    transition: none !important
    opacity: 1
    visibility: visible

  .content
    margin: 0 !important
    max-width: none !important

// High-rez unscaled screens (e.g. Kindle Fire HDX)
@media only screen and (min-width: 2550px) and (-webkit-max-device-pixel-ratio: 2)
  html
    font-size: 200% !important


// iPhone / old android < 6 in landscape
@media only screen and (orientation: landscape) and (max-height: 370px)
  html
    font-size: 85% !important

// Portrait iPads
@media screen and (min-aspect-ratio: 5/3)
