//////////
// VARS //
//////////

$main-text-color        = rgb(180, 180, 180)
$link-color             = rgb(255, 255, 255)
$contact-link-color     = rgb(185, 185, 185)
$hero-nav-default-color = rgb(255, 255, 255)

$background-color       = rgb(91,  91,  91)

$mobile-bg-mask         = rgba(255, 255, 255, .7)
$mobile-bg-color        = rgb(240, 237, 228)

$input-border-color     = rgb(204, 204, 204)
$placeholder-color      = rgb(108, 107,  106)

$soundcloud-hover-color = rgb(255, 136, 0)
$fb-hover-color         = rgb(59,  89,  152)
$youtube-hover-color    = rgb(187, 0,   0)
$instagram-hover-color  = rgb(81,  127, 164)

$home-page-bg           = url('../assets/images/JoyWebPageCropped-with-gradient.jpg')
$about-page-bg          = url('../assets/images/JoyWebPageCropped.jpg')
$shows-page-bg          = url('../assets/images/JoyWebPageCropped.jpg')
$mailing-list-page-bg   = url('../assets/images/JoyWebPageCropped.jpg')
$contact-page-bg        = url('../assets/images/JoyWebPageCropped.jpg')
$mobile-bg              = url('../assets/images/joy-headshot-full.jpg')
$mobile-bg-bkground = url('../assets/images/Joy87858bkground.jpg') 

$nav-width = 32rem

@font-face
  font-family: Spire
  src: url('../assets/spireextralightalt.ttf')


/////////////////
// PAGE STYLES //
/////////////////

html, body
  height: 100vh
  width: 100vw
  min-width: 300px
  font-family: 'Noto Serif', sans-serif
  font-size: 120%
  background-color: $background-color
  color: $main-text-color
  box-sizing: border-box
  overflow: hidden
  user-select: none

*, *:before, *:after
  box-sizing: inherit
  -webkit-touch-callout: none

body
  background-image: $home-page-bg
  background-repeat: no-repeat
  background-position: right center
  background-size: contain
  background-attachment: fixed

a
  color: $link-color
  text-decoration: none

/////////
// nav //
/////////

nav
  text-align: center
  font-size: 1.5rem
  height: 100vh
  display: flex
  position: fixed

.social__links
  display: flex
  justify-content: space-around
  padding: 0 1em

  a
    margin: .5rem
    color: $hero-nav-default-color
    transition: color .25s ease-in-out

  .fa::before
    font-size: 1.5rem

  .fa-soundcloud:hover
    color: $soundcloud-hover-color

  .fa-facebook-square:hover
    color: $fb-hover-color

  .fa-youtube:hover
    color: $youtube-hover-color

  .fa-instagram:hover
    color: $instagram-hover-color

h1
  color: $hero-nav-default-color
  font-family: Spire, serif;
  font-size: 6rem
  font-weight: normal
  text-align: center
  letter-spacing: .58em
  margin: 0
  margin-bottom: .1em
  padding-left: .5em

.page-links
  list-style-type: none
  padding: 0

  a
    color: $hero-nav-default-color
    position: relative
    font-family: 'Open Sans', sans-serif
    font-size: 1.5rem
    transition: color 1s ease 0s, text-decoration 1s ease 0s

    &:before
      content: ""
      position: absolute
      width: 100%
      height: 2px
      bottom: 2px
      left: 0
      background-color: $hero-nav-default-color
      visibility: hidden
      transform: scaleX(0)
      transition: all 0.3s ease-in-out 0s

    &:hover:before, &.active:before
      visibility: visible
      transform: scaleX(1)

.nav__wrapper
  margin-top: auto
  margin-bottom: auto


/////////////
// CONTENT //
/////////////

.page
  height: 100%
  width: 100%

  position: fixed
  align-items: center

  opacity: 0
  visibility: hidden

  transition: visibility 0s linear 1s, opacity 1s ease-in-out

  &.active
    opacity: 1
    visibility: visible

    transition-delay: 0s

.content
  margin-left: $nav-width

#home-page
  // background-image: $home-page-bg

#about-page
  // background-image: $about-page-bg

  .content
    background-color: rgba(200, 200, 200, .4)
    border-radius: 5px
    margin-top: 1em
    margin-bottom: 1em
    margin-right: 1em
    padding: 1em 1.5em

.about-page__text
  color: rgb(235, 235, 235)
  overflow-y: auto
  height: 85vh
  font-size: 80%
  letter-spacing: .1em

#shows-page
  // background-image: $shows-page-bg

  .bit-share-links, .bit-share-text
    display: none

#mailing-list-page
  // background-image: $mailing-list-page-bg

  .content
    margin-top: 25%

#contact-page
  // background-image: $contact-page-bg

#contact-email
  color: $contact-link-color


#contact-email, #shows-page tr:not(.bit-header)
  user-select: initial

///////////////////////
// Mailing list form //
///////////////////////

form
  margin-left: 16rem

.input-group
  margin: 1em 0
  display: inline-flex
  font-size: 1.2em

label
  display: block

input[type="email"]
  color: $main-text-color
  flex: 1
  padding: 7px
  line-height: 1.33
  background-color: transparent
  border: none
  border-bottom: 1px solid #bcc3d1
  transition: border-color ease-in-out .15s

  &:focus
    border-color: #66afe9
    outline: 0

  &.invalid
    border-color: #a94442

  &::placeholder
    color: $placeholder-color

input[type="submit"]
  font-weight: 400
  line-height: 1.33
  border: 1px solid $input-border-color
  background-color: transparent
  margin: .25em
  padding: .25em
  padding-bottom: 8px

  &:active, &:focus
    border-bottom: 2px solid green

input:hover
  border-bottom: 2px solid $input-border-color


////////////////////
// Responsiveness //
////////////////////

@media only screen and (orientation: portrait)
  html, body
    min-width: initial
    overflow: auto

  html 
    //background-image: $mobile-bg-bkground
    //background-size: contain
    //background-attachment: fixed
    //background-repeat: no-repeat
    //background-position: right center
    
  body
    display: flex
    flex-direction: column

  header
    width: 100%
    position: static
    align-items: center
    margin: 0

  #about-page .content
    background-color: none

  .about-page__text
    height: initial

  h1
    letter-spacing: .2em
    padding-left: 0

  #contact-email
    font-size: 1rem

  nav
    height: auto
    float: none
    flex: 1
    order: -1

    justify-content: center


  .nav__wrapper
    margin-top: 2em
    margin-bottom: 0
    width: 100vw

  .page-links
    display: none
    
  .pages
    height: 58vh
    margin-top: 45vh
    overflow-y: scroll
        
  #home-page
    display: none

  #about-page
    margin-top: 0

  .page
    height: auto
    width: 100%
    // width: 100vw
    flex: 1
    position: static
    margin: 2rem 0
    padding: 1rem
    background-image: none !important
    background-color: transparent !important
    transform: none !important
    transition: none !important
    opacity: 1
    visibility: visible

  .content
    margin: 0 !important
    max-width: none !important

  form
    margin-left: 0
    
  input[type="email"] 
    width: 100% 
      

// High-rez unscaled screens (e.g. Kindle Fire HDX)
@media only screen and (min-width: 2550px) and (-webkit-max-device-pixel-ratio: 2)
