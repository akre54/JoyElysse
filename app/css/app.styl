@import "grid.styl"

/////////////////
// PAGE STYLES //
/////////////////

html, body
  height: 100%

body
  background-image: url('../assets/images/flower-pattern.jpg')
  background-size: cover
  -webkit-user-select: none;



////////////
// HEADER //
////////////

header
  position: fixed
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: center
  width: 100%
  background-color: rgba(39, 36, 34, .9)


#header__title
  background-color: rgb(230, 103, 61)
  float: left
  padding: 10px
  width: 210px

  h1
    color: #fff
    font-family: 'Great Vibes', cursive
    margin: 0
    text-align: center


  h3
    color: #fff
    font-family: 'Bad Script', cursive
    margin: 0
    text-align: center


.navigation
  list-style: none
  display: flex
  padding-left: 0

  a
    display: block
    padding: 1em
    font-size: 25px

  a, a:visited
    color: rgb(162, 151, 144)
    text-decoration: none



/////////////
// CONTENT //
/////////////

#content-container
  position: static
  padding: 200px

#bio p
  width: 200px
  float: left
  color: white

#headshot
  width: 250px
  float: left
  margin-left: 50px


////////////
// FOOTER //
////////////

footer
  position: fixed
  bottom: 0
  display: flex
  flex-direction: row
  justify-content: space-around
  width: 100%

  .social__links
    list-style: none
    display: flex

  a, a:visited
    color: rgb(130, 130, 130)
    text-decoration: none
    display: block
    padding: 1em


////////////////////
// RESPONSIVENESS //
////////////////////

@media screen and (max-width: 670px)
  header
    position: static

  #header__title
    width: 100%
