/////////////////
// PAGE STYLES //
/////////////////

html, body, #pages
  height: 100%
  min-width: 300px

body

  -webkit-user-select: none;
  font-family: 'Raleway', sans-serif
  overflow: hidden

////////////
// HEADER //
////////////

header
  position: fixed
  top: 0
  right: 1em
  display: flex
  flex-direction: row
  justify-content: space-around

  .social__links
    list-style: none
    display: flex

  a, a:visited
    color: rgb(130, 130, 130)
    text-decoration: none
    display: block
    padding: 1em

.fa::before
  font-size: 25px





/////////////
// CONTENT //
/////////////

.page
  width: 100%
  height: 100%
  padding: 200px 0 200px 75vh

  background-color: rgb(240, 237, 228)
  background-repeat: no-repeat
  background-position: 0% center
  background-attachment: fixed
  transition: background-color 0.5s ease-in-out


#home
  background-image: url('../assets/images/joy-headshot-full.jpg')
  background-size: contain

  .content
    position: static
    width: 450px

  h1
    color: #fff
    font-family: 'Tangerine', cursive
    font-size: 214px
    font-weight: normal
    text-align: center
    margin: 0

  h2
    text-align: center
    color: #fff

  .nav-link
    color: #fff
    font-style: italic
    text-decoration: none

#shows
  background-color: rgb(210, 94, 79)
  background-size: cover
  background-image: url('../assets/images/shows-bg.jpg')

#mailing-list
  background-color: rgb(240, 237, 228)
  background-image: url('../assets/images/joy-headshot-full.jpg')

#contact-page
  background-color: rgb(240, 237, 228)
  background-image: url('../assets/images/joy-headshot-full.jpg')



#headshot
  display: none
